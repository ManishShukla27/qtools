import os
import sys

default_qtools_home = os.path.normpath("@qtools_home@")
qtools_home = os.environ.get("QTOOLS_HOME", default_qtools_home)

sys.path.insert(0, os.path.join(qtools_home, "python"))

from argparse import ArgumentParser
from qtools import *

def main():
    description = "Send AMQP messages"
    parser = ArgumentParser(description=description)

    parser.add_argument("address", metavar="ADDRESS")
    parser.add_argument("message", metavar="MESSAGE")
    parser.add_argument("--verbose", action="store_true")

    args = parser.parse_args()

    address = args.address

    if "/" not in address:
        address = "localhost:5672/{}".format(address)
    
    handler = SendHandler(address, args.message)
    handler.verbose = args.verbose
    
    container = Container(handler)
    container.run()

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass

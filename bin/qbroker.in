import os
import sys

default_qtools_home = os.path.normpath("@qtools_home@")
qtools_home = os.environ.get("QTOOLS_HOME", default_qtools_home)

sys.path.insert(0, os.path.join(qtools_home, "python"))

from argparse import ArgumentParser
from spindle import *
from qtools import *

def main():
    set_thread_name("qbroker")
    add_logged_module("qtools")
    enable_console_logging("info")
    
    description = "A simple AMQP message broker for testing"
    parser = ArgumentParser(description=description)

    parser.add_argument("--host", metavar="HOST", default="localhost",
                        help="Listen at HOST (default localhost)")
    parser.add_argument("--port", metavar="PORT", default="5672",
                        help="Listen at PORT (default 5672)")
    parser.add_argument("--verbose", action="store_true",
                        help="Even more logging than usual")

    args = parser.parse_args()

    interface = "{}:{}".format(args.host, args.port)
    
    broker = Broker(interface)

    broker.run()

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass

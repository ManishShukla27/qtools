# -*- mode: sh; -*-

set -e

if (( $# != 1 )); then
    echo "Usage: qtools-test ADDRESS-URL"
    exit 1
fi

url=$1
work_dir=$(mktemp -d)
sender_id=container-$RANDOM
receiver_id=container-$RANDOM
sent_message=message-$RANDOM
request_message=request-$RANDOM

trap 'kill $(jobs -p)' SIGINT

qsend $OPTIONS $url --message $sent_message &
received_message=$(qreceive $OPTIONS $url --count 1)

if [[ $received_message != $sent_message ]]; then
    exit 1
fi

qmessage --count 10 | qsend --id $sender_id $OPTIONS $url &
qreceive --id $receiver_id $OPTIONS $url --count 10 >/dev/null

qmessage --count 10 --rate 1000 | qsend $OPTIONS $url &
qreceive $OPTIONS $url --count 10 >/dev/null

qmessage --count 1 | qsend --presettled $OPTIONS $url &
qreceive $OPTIONS $url --count 1 --json >/dev/null

qrequest $OPTIONS $url --message $request_message > $work_dir/response_message &
qrespond $OPTIONS $url --count 1

if [[ $(cat $work_dir/response_message) != $request_message ]]; then
    exit 1
fi

qrequest $OPTIONS $url --message abc > $work_dir/response_message &
qrespond $OPTIONS $url --count 1 --config - <<EOF
def process(request, response):
    response.body = request.body.upper()
EOF

if [[ $(cat $work_dir/response_message) != ABC ]]; then
    exit 1
fi

qmessage --count 10 | qrequest --id $sender_id $OPTIONS $url >/dev/null &
qrespond --id $receiver_id $OPTIONS $url --count 10

qmessage --count 10 --rate 1000 | qrequest $OPTIONS $url >/dev/null &
qrespond $OPTIONS $url --count 10

qmessage --count 1 | qrequest --presettled --json $OPTIONS $url >/dev/null &
qrespond $OPTIONS $url --count 1

rm -rf $work_dir

echo "qtools-test: PASSED"
